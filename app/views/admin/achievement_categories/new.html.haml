%fieldset
  %legend
    New Achievement Category
  %br/
= form_for @achievement_category, :url => admin_achievement_categories_path, :html => {:class => 'form-horizontal'}  do |f|
  -if @achievement_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@achievement_category.errors.count, "error")} prohibited this achievement_category from being saved:"
      %ul
        - @achievement_category.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_field', :rows => 4
  .form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
    = link_to 'Cancel', admin_achievement_categories_url, :class => 'btn'

