- model_class = @score.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @score.name
%p
  %strong= model_class.human_attribute_name(:score) + ':'
  %br
  = @score.score
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @score.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), scores_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_score_path(@score), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), score_path(@score), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
