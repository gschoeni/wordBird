.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Word Bird', root_url, :class => 'brand'
      .container.nav-collapse
        %ul.nav
          %li= link_to "Leader Board", scores_url
          %li= link_to "Help", '/help.html'
        -if current_user
          %ul.nav.pull-right
            %li= link_to 'Welcome, '+current_user.to_s, user_path(current_user)
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                My Stuff
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Edit Info", edit_user_path(current_user)
                %li= link_to "My Scores", my_scores_url
                /%li= link_to "Achievements", "#"
                %li.divider
                %li= link_to "Logout", logout_path
        -else
          %ul.nav.pull-right
            %li= link_to 'Login', login_path
            %li.divider-vertical
            %li= link_to 'Register', new_user_path
